<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Wanda S"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_back"
        app:layout_constraintStart_toEndOf="@+id/img_back"
        app:layout_constraintTop_toTopOf="@+id/img_back" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:padding="6dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_wanda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Wanda S"
        android:textAppearance="@style/TextBig1"
        app:layout_constraintStart_toStartOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/img_profile" />

    <TextView
        android:id="@+id/tv_profile_caption_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super Hero"
        android:textAppearance="@style/TextCaptionRed"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

    <TextView
        android:id="@+id/tv_profile_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="120"
        android:textAppearance="@style/TextBig1"
        app:layout_constraintStart_toStartOf="@+id/gd_width40"
        app:layout_constraintTop_toTopOf="@+id/img_profile" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_width40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <TextView
        android:id="@+id/tv_label_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Posts"
        android:textAppearance="@style/TextCaptionRed"
        app:layout_constraintStart_toStartOf="@+id/gd_width40"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_post" />

    <TextView
        android:id="@+id/tv_profile_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5k"
        android:textAppearance="@style/TextBig1"
        app:layout_constraintStart_toStartOf="@+id/tv_label_follower"
        app:layout_constraintTop_toTopOf="@+id/tv_profile_post" />


    <TextView
        android:id="@+id/tv_label_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Followers"
        android:textAppearance="@style/TextCaptionRed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_post"
        app:layout_constraintStart_toEndOf="@+id/tv_label_post"
        app:layout_constraintTop_toTopOf="@+id/tv_label_post" />

    <TextView
        android:id="@+id/tv_label_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Following"
        android:textAppearance="@style/TextCaptionRed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_follower"
        app:layout_constraintStart_toEndOf="@+id/tv_label_follower"
        app:layout_constraintTop_toTopOf="@+id/tv_label_follower" />

    <TextView
        android:id="@+id/tv_profile_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAppearance="@style/TextBig1"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_following"
        app:layout_constraintStart_toStartOf="@+id/tv_label_following" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_rounded_blue"
        android:text="Follow"
        android:textAllCaps="false"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_follow_more"
        app:layout_constraintStart_toStartOf="@+id/tv_label_post"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_post" />

    <View
        android:id="@+id/btn_follow_more"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_button_circle_white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_follow"
        app:layout_constraintEnd_toEndOf="@+id/tv_label_following"
        app:layout_constraintTop_toTopOf="@+id/btn_follow" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@+id/btn_follow_more"
        app:layout_constraintEnd_toEndOf="@+id/btn_follow_more"
        app:layout_constraintStart_toStartOf="@+id/btn_follow_more"
        app:layout_constraintTop_toTopOf="@+id/btn_follow_more" />

</androidx.constraintlayout.widget.ConstraintLayout>